<h1>Pirate</h1>

<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3>
  <h4>Weight: <%= @pirate.weight %> pounds</h4>
  <h4>Height: <%= @pirate.height %> inches</h4>
</div>


<h1><%= @pirate.name %>'s Ship One</h1>

  <% @ships.each.with_index do |ship, index| %>

  <div class="ship">
    <% if index == 0 %>
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <% end %>
    <% end %>
  </div>

<h1><%= @pirate.name %>'s Ship Two</h1>

  <% @ships.each.with_index do |ship, index| %>
  <div class="ship">
    <% if index == 1 %>
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <% end %>
    <% end %>
  </div>
